<Window x:Class="ClientSwaggerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientSwaggerApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="850">
    <Grid>
        <StackPanel Orientation="Vertical" >
            
        <StackPanel Height="300" HorizontalAlignment="Left" Orientation="Horizontal">
                <StackPanel Name="paramsStackPanel" Orientation="Vertical">
                    
                <Button Click="Button_Click" FontSize="30" FontFamily="Comic Sans MS" Background="White">Start Swagger</Button>
                <TextBox Name="requestTxtb" FontSize="24" ></TextBox>
                <Button Click="Button_Click_1" FontSize="30" FontFamily="Comic Sans MS" Background="White">Send Request</Button>
                </StackPanel>
                <ScrollViewer VerticalScrollBarVisibility="Visible">
                    
                <StackPanel Name="CommandsStackPanel" Width="580" >
                    
                </StackPanel>
                </ScrollViewer>
        </StackPanel>
            <StackPanel >
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <TextBox 
                        TextWrapping="Wrap" Height="300"
                               Background="LightBlue" Text="Response 
                               Text" FontSize="20" Name="ResponseTxtb" >
                        
                    </TextBox>
                </ScrollViewer>
            </StackPanel>
        
        </StackPanel>
    </Grid>
</Window>
